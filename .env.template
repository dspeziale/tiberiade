# Configurazione Ambiente
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=your-secret-key-change-in-production

# Traccar Server
TRACCAR_SERVER=http://localhost:8082
TRACCAR_TIMEOUT=10

# Cache e Storage
GEOCODING_CACHE_SIZE=1000
GEOCODING_CACHE_TTL=86400
MAX_REPORT_SIZE_MB=50
REPORT_CLEANUP_DAYS=30

# Simulator
MAX_SIMULATORS=50
SIMULATOR_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Features
CORS_ENABLED=false
RATE_LIMITING=true
